option_settings:
  - option_name: BUNDLE_DISABLE_SHARED_GEMS
    value: "1"
  - option_name: BUNDLE_PATH
    value: "vendor/bundle"

packages:
  yum:
    git: []
    patch: []

  commands:
    01deploy:
      command: gem install sqlite3 -v='1.3.11' --source https://rubygems.org/
      command: gem install bcrypt -v='3.1.10' --source https://rubygems.org/
      command: gem install puma -v='3.4.0' --source https://rubygems.org/
      command: gem install nokogiri -v='1.6.8' --source https://rubygems.org/
