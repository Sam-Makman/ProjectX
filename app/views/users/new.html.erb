<% provide(:title, 'Sign up') %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Sign up</h1>
    <%= form_for(@user) do |f| %>


        <%= f.label :first_name %>
        <%= f.text_field :first_name, class: 'form-control' %>

        <%= f.label :last_name %>
        <%= f.text_field :last_name, class: 'form-control' %>

        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>

        <%= f.label :home_phone %>
        <%= f.telephone_field :home_phone, class: 'form-control' %>

        <%= f.label :cell_phone %>
        <%= f.telephone_field :cell_phone, class: 'form-control' %>

        <div class="field">
          <label for="unique_id"> Registration ID</label>
          <input class="form-control" type="text" name="unique_id" id="unique_id"/>
        </div>

        <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
    <p>Already have an account? <%= link_to "Login here", login_path%>
    </p>
  </div>
</div>
