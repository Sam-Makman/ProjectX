  <h1> Welcome <%= current_user.first_name %> </h1>
  <div class="col-md-6">
    <h3> Personal Information </h3>
    <ul>
      <li> First Name: <%= current_user.first_name %>
      </li>
      <li> Last Name: <%= current_user.last_name %>
      </li>
      <li> Email: <%= current_user.email %>
      </li>
      <li> Cell Phone: <%= current_user.cell_phone %>
      </li>
      <li> Home Phone: <%= current_user.home_phone %>
      </li>
    </ul>
    <%= link_to 'Edit Information', edit_user_path(current_user), class: "btn btn-primary" %>
  </div>
    <div class="col-md-6">
      <h3> Emergency Contacts </h3>
<table class="table">
  <thead>
    <tr>
      <th>
        First Name
      </th>
      <th>
        Last Name
      </th>
      <th>
        Phone Number
      </th>
    </tr>
  </thead>
  <tbody>
    <% @caregivers.each do |caregiver| %>
    <tr>
      <td>
          <%= caregiver.first_name %>
      </td>
      <td>
          <%= caregiver.last_name %>
      </td>
      <td>
          <%= caregiver.phone_number %>
      </td>
      <td><%= link_to 'Edit', edit_caregiver_path(caregiver) %></td>
      <td>
          <%= link_to 'Delete', caregiver, method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
    <% end %>

  </tbody>
</table>
<% if current_user.caregivers.length == 0 %>
  <p> You need to have at least one emergency contact registered </p>
<% end %>
<% if current_user.caregivers.length < 4 %>
  <%= link_to 'Add new', new_caregiver_path %>
<% end %>
</div>
